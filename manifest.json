{
    "manifest_version": 3,
    "name": "PromptKeeper",
    "description": "Save, organize, and optimize AI prompts. Sync via Google Drive. Local AI with Gemini Nano. Side Panel for easy paste-to-page.",
    "author": "Jaroslav Pantsjoha",
    "version": "2.0.0",
    "action": {
        "default_title": "PromptKeeper - Click to open Side Panel",
        "default_icon": {
            "48": "images/icon-48.png",
            "64": "images/icon-128.png",
            "128": "images/icon-128.png"
        }
    },
    "icons": {
        "48": "images/icon-48.png",
        "64": "images/icon-128.png",
        "128": "images/icon-128.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "identity",
        "alarms",
        "sidePanel",
        "offscreen"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "oauth2": {
        "client_id": "804678258987-e841cbt90rcba2pn5lgti5tn5cfm2t0t.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive.file",
            "https://www.googleapis.com/auth/userinfo.email"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injectedScript.js",
                "gemini-help.html",
                "gemini-diagnostic.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>",
        "https://www.googleapis.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}